<div section="related-products">
  <div class="section-head">
    <h2>{{ section.settings.title }}</h2>
  </div>
  <ul class="section-core">
    {% for block in section.blocks %}
      {% render 'product-block', product: block.settings.product, badge: block.settings.badge %}
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "label": "Related products",
  "templates": ["index", "product"],
  "limit": 3,
  "max_blocks": 24,
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "t:common.content.title",
      "default": "You might like"
    },
    {
      "id": "space_top",
      "type": "range",
      "label": "t:common.spacing.space_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 50
    },
    {
      "id": "space_bottom",
      "type": "range",
      "label": "t:common.spacing.space_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "product",
      "label": "t:common.blocks.product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "t:common.collection.label"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge"
        }
      ]
    }
  ]
}
{% endschema %}
