<ul section="socials">
  {% for social in section.blocks %}
    {% render 'block-social', type: social.settings.social_name, href: social.settings.social_link, youcan_attributes: social.youcan_attributes %}
  {% endfor %}
</ul>

{% schema %}
{
  "label": "Social links",
  "limit": 3,
  "max_blocks": 6,
  "settings": [],
  "blocks": [
    {
      "type": "social",
      "label": "Social item",
      "settings": [
        {
          "type": "select",
          "id": "social_name",
          "label": "Social name",
          "options": [
            {
              "value": "facebook",
              "label": "Facebook"
            },
            {
              "value": "instagram",
              "label": "Instagram"
            },
            {
              "value": "x-twitter",
              "label": "X (Twitter)"
            },
            {
              "value": "tiktok",
              "label": "TikTok"
            },
            {
              "value": "whatsapp",
              "label": "WhatsApp"
            },
            {
              "value": "snapchat",
              "label": "Snapchat"
            }
          ],
          "default": "facebook"
        },
        {
          "type": "text",
          "id": "social_link",
          "label": "Social link"
        }
      ]
    }
  ]
}
{% endschema %}
