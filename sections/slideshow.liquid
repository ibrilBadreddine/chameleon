{{ 'slideshow.section.js' | asset_url | script_tag_deferred }}

<ui-slideshow
  section="slideshow"
  style="--slideshow-height: {{ section.settings.height }}vh;"
>
  <div class="slideshow-wrapper">
    <ul class="wrapper-box">
      {% for slide in section.blocks %}
        {% render 'slideshow-block', settings: slide.settings %}
      {% endfor %}
    </ul>
  </div>
  {% if section.blocks.size > 1 and section.settings.show_arrows %}
    <div class="slideshow-arrows">
      <button aria-label="previous">
        {% render 'ui-icon', name: 'chevron_left', size: 34 %}
      </button>
      <button aria-label="next">
        {% render 'ui-icon', name: 'chevron_right', size: 34 %}
      </button>
    </div>
  {% endif %}
  {% if section.blocks.size > 1 %}
    <div class="slideshow-pagination">
      {% for index in (1..section.blocks.size) %}
        <button
          aria-label="scroll to {{ index }}"
          {% if index == 1 %}
            aria-selected="true"
          {% else %}
            aria-selected="false"
          {% endif %}
        ></button>
      {% endfor %}
    </div>
  {% endif %}
</ui-slideshow>

{%- schema -%}
{
  "label": "t:sections.slideshow.label",
  "templates": ["index", "page"],
  "max_blocks": 4,
  "settings": [
    {
      "type": "header",
      "content": "t:common.style"
    },
    {
      "type": "select",
      "id": "height",
      "label": "t:sections.slideshow.height",
      "options": [
        {
          "value": "45",
          "label": "t:common.sizes.small"
        },
        {
          "value": "65",
          "label": "t:common.sizes.medium"
        },
        {
          "value": "85",
          "label": "t:common.sizes.large"
        }
      ],
      "default": "65"
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "t:sections.slideshow.show_arrows",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.slideshow.content"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "t:sections.slideshow.content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:common.alignment.left"
        },
        {
          "value": "center",
          "label": "t:common.alignment.center"
        },
        {
          "value": "right",
          "label": "t:common.alignment.left"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "content_color",
      "label": "t:sections.slideshow.content_color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "t:common.buttons.button_background",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "button_foreground",
      "label": "t:common.buttons.button_text",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "t:common.spacing.section_spacing"
    },
    {
      "id": "space_top",
      "type": "range",
      "label": "t:common.spacing.space_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 0
    },
    {
      "id": "space_bottom",
      "type": "range",
      "label": "t:common.spacing.space_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "label": "t:sections.slideshow.blocks.slide.label",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "t:sections.slideshow.image"
        },
        {
          "id": "heading",
          "type": "text",
          "label": "t:sections.slideshow.blocks.slide.heading",
          "default": "t:sections.slideshow.blocks.slide.heading_default"
        },
        {
          "id": "subheading",
          "type": "text",
          "label": "t:sections.slideshow.blocks.slide.subheading",
          "default": "t:sections.slideshow.blocks.slide.subheading_default"
        },
        {
          "id": "button_text",
          "type": "text",
          "label": "t:common.buttons.button_text",
          "default": ""
        },
        {
          "id": "button_url",
          "type": "text",
          "label": "t:sections.slideshow.blocks.slide.button_link",
          "default": ""
        }
      ]
    }
  ]
}
{%- endschema -%}
