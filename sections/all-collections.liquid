<div section="all-collections">
  <div class="all-collections-head">
    <h2 class="title">Collections</h2>
    <p class="description">All collections</p>
  </div>
  <div class="all-collections-core">
    {% paginate collections by 24 cod %}
      {% if items.size > 0 %}
        <ul class="items">
          {% for collection in items %}
            <li class="item">
              <a href="/collections/{{ collection.slug }}">
                <div class="media">
                  {% if collection.preview_image %}
                    <img
                      src="{{ collection.image }}"
                      alt="{{ collection.name }}"
                      height="100%"
                      width="100%"
                    >
                  {% else %}
                    {% render 'ui-icon', name: 'image', size: 60, filled: true %}
                  {% endif %}
                </div>
                <div class="content">
                  <span class="title">{{ collection.name | default: 'My collection' }}</span>
                  {% render 'ui-icon', name: 'arrow_right_alt' %}
                </div>
              </a>
            </li>
          {% endfor %}
        </ul>
        {% render 'ui-pagination', next_page_url: next_page, previous_page_url: previous_page, current: current, last: last, terms: terms %}
      {% else %}
        {% render 'ui-empty' %}
      {% endif %}
    {% endpaginate %}
  </div>
</div>

{% schema %}
{
  "label": "All Collections"
}
{% endschema %}
