<ul section="benefits" theme="{{ section.settings.theme }}">
  {% for benefit in section.blocks %}
    {% render 'block-benefit', content: benefit.settings.content, icon: benefit.settings.icon, youcan_attributes: benefit.youcan_attributes %}
  {% endfor %}
</ul>

{% schema %}
{
  "label": "Benefits",
  "limit": 3,
  "max_blocks": 8,
  "settings": [
    {
      "type": "select",
      "id": "theme",
      "label": "Theme",
      "options": [
        {
          "value": "primary-low",
          "label": "Primary (low contrast)"
        },
        {
          "value": "primary-high",
          "label": "Primary (high contrast)"
        },
        {
          "value": "neutral",
          "label": "Neutral"
        }
      ],
      "default": "primary-low"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "label": "Benefit",
      "settings": [
        {
          "type": "paragraph",
          "content": "You can use [Google Icons](https://fonts.google.com/icons)"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ]
}
{% endschema %}
