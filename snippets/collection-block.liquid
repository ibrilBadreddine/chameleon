{% comment %}
  Renders a collection item (Block)

  Accepts:
  - collection: {Object} Collection info

  Usage:
  {% render 'collections-block', collection: {...} %}
{% endcomment %}

{% assign info = collection.collection %}

<li block="collection">
  <div class="media">
    {% if info.preview_image %}
      <img
        src="{{ info.image }}"
        alt="{{ info.name }}"
        height="100%"
        width="100%"
      >
    {% else %}
      {% render 'ui-icon', name: 'image', size: 60, filled: true %}
    {% endif %}
  </div>
  <div class="content">
    <div class="text">
      <h4 class="title">{{ info.name | default: 'My collection' }}</h4>
      {% if info.description %}
        <p class="description">{{ info.description }}</p>
      {% endif %}
    </div>
    <a href="/collections/{{ info.slug }}" ui-link="secondary" class="action">{{ collection.button_text }}</a>
  </div>
</li>
